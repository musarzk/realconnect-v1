# Database
# MongoDB connection string. Use a strong password and enable IP whitelist in MongoDB Atlas.
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/dbname?retryWrites=true&w=majority

# Database name
MONGODB_DB=Realbase

# Authentication
# JWT Secret: use a strong, random string (min 32 chars). Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your-strong-random-secret-here-min-32-chars

# API Configuration
# Public API URL used by client for API calls
NEXT_PUBLIC_API_URL=http://localhost:3000

# Optional: Supabase redirect (if using Supabase auth)
NEXT_PUBLIC_DEV_SUPABASE_REDIRECT_URL=http://localhost:3000

# Environment mode
NODE_ENV=development
